<%= turbo_frame_tag "modal" do %>
  <div class="modal-background"></div>
  <div class="modal d-block mt-5">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel"><%= t("text.update_address")%></h5>
        </div>
        <div id="modal-form">
          <%= render "form", { :url => user_info_path(@user_info) } %>
        </div>
      </div>
    </div>
  </div>
<% end %>
