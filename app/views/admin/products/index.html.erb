<%= provide :title, t("text.product_management") %>
<div class="card mb-4">
  <div class="card-header"><strong><%= t"text.product_management" %></strong></div>
  <div class="card-body">
      <div class="tab-content rounded-bottom">
        <div class="tab-pane p-3 active preview" role="tabpanel" id="preview-1000">
          <div class="d-flex justify-content-between mb-2">
            <form class="d-flex">
              <div class="form-group">
                <input type="text" class="form-control" placeholder="<%= t"text.search" %>">
              </div>
            </form>
            <%= link_to t("text.add_product"), new_admin_product_path , class: "btn btn-info text-white" %>
          </div>
          <table class="table table-bordered">
            <thead class="table-light">
              <tr>
                <th scope="col"><%= t"text.product.image" %></th>
                <th scope="col"><%= t"text.product.name" %></th>
                <th scope="col"><%= t"text.product.category" %></th>
                <th scope="col"><%= t"text.product.cost" %></th>
                <th scope="col"><%= t"text.product.status" %></th>
                <th scope="col"></th>
              </tr>
            </thead>
            <% if @products.any? %>
                <%= render @products %>
            <% end %>
          </table>
          <%== pagy_bootstrap_nav @pagy %>
        </div>
      </div>
    </div>
  </div>
</div>
