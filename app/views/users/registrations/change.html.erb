<% provide :title, t("text.change_password") %>
<section class="h-100 h-custom mt-5">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12">
        <div class="card card-registration card-registration-2" style="border-radius: 15px;">
          <ul class="nav nav-tabs">
            <%= render "shared/navigation" %>
          </ul>
          <div class="card-body p-3">
            <div class="row justify-content-center">
              <div class="col-4">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                  <div class="mb-2">
                    <%= f.label :current_password, t("form.user.current_password") %>
                    <%= f.password_field :current_password, class: "form-control" %>
                    <%= display_error(@user, :current_password) %>
                  </div>
                  <div class="mb-2">
                    <%= f.label :password, t("form.user.new_password") %>
                    <%= f.password_field :password, class: "form-control" %>
                    <%= display_error(@user, :password) %>
                  </div>
                  <div class="mb-2">
                    <%= f.label :password_confirmation, t("form.user.retype_new_password") %>
                    <%= f.password_field :password_confirmation, class: "form-control" %>
                    <%= display_error(@user, :password_confirmation) %>
                  </div>
                  <div class="d-grid">
                      <%= f.button t("text.change_password"), type:"submit", class: "btn btn-dark btn-login fw-bold text-uppercase" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
