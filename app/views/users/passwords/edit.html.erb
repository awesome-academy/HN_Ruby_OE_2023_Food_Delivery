<% provide :title, t("text.update_new_password") %>
<section class="py-5 bg-light">
  <div class="container px-4 px-lg-5 mt-3">
    <div class="row">
      <div class="col-5 mx-auto">
        <div class="card border-0 shadow rounded-3 my-5">
          <div class="card-header bg-black">
            <h3 class="text-center font-weight-light my-3 text-white"><%= t "text.update_new_password" %></h3>
          </div>
          <div class="card-body p-3 p-sm-5 fw-bold">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= f.hidden_field :reset_password_token %>
              <div class="mb-2">
                <%= f.label :password, t("form.user.password") %>
                <%= f.password_field :password, class: "form-control" , autofocus: true %>
                <%= display_error(@user, :password) %>
              </div>
              <div class="mb-2">
                <%= f.label :password_confirmation, t("form.user.password_confirmation") %>
                <%= f.password_field :password_confirmation, class: "form-control" %>
                <%= display_error(@user, :password_confirmation) %>
              </div>
              <div class="d-grid">
                  <%= f.button t("text.change_password"), type:"submit", class: "btn btn-dark btn-login fw-bold text-uppercase" %>
              </div>
              <hr class="my-4">
              <div class="text-center">
                <%= render "users/shared/links" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
