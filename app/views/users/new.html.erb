<% provide :title, t("text.register") %>
<section class="py-5 bg-light">
  <div class="container px-4 px-lg-5 mt-3">
    <div class="row">
      <div class="col-5 mx-auto">
        <div class="card border-0 shadow rounded-3 my-5">
          <div class="card-header bg-black">
            <h3 class="text-center font-weight-light my-3 text-white"><%= t "text.register_account"%></h3>
          </div>
          <div class="card-body p-3 p-sm-5 fw-bold">
            <%= form_with model: @user, url: signup_path do |f| %>
              <div class="mb-2">
                <%= f.label :name , t("form.user.name") %>
                <%= f.text_field :name, class: "form-control" %>
                <%= display_error(@user, :name) %>
              </div>
              <div class="mb-2">
                <%= f.label :email, t("form.user.email") %>
                <%= f.text_field :email, class: "form-control" %>
                <%= display_error(@user, :email) %>
              </div>
              <div class="mb-2">
                <%= f.label :password, t("form.user.password") %>
                <%= f.password_field :password, class: "form-control" %>
                <%= display_error(@user, :password) %>
              </div>
              <div class="mb-2">
                <%= f.label :password_confirmation, t("form.user.password_confirmation") %>
                <%= f.password_field :password_confirmation, class: "form-control" %>
                <%= display_error(@user, :password_confirmation) %>
              </div>
              <div class="d-grid">
                  <%= f.button t("text.register"), type:"submit", class: "btn btn-dark btn-login fw-bold text-uppercase" %>
              </div>
              <hr class="my-4">
              <div class="text-center"><%= t"text.had_account" %> <a href><%= t"text.login" %></a></div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
