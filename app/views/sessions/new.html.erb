<% provide :title, t("text.login") %>
<section class="py-5 bg-light">
  <div class="container px-4 px-lg-5 mt-3">
    <div class="row">
      <div class="col-5 mx-auto">
        <div class="card border-0 shadow rounded-3 my-5">
          <div class="card-header bg-black">
            <h3 class="text-center font-weight-light my-3 text-white"><%= t "text.login"%></h3>
          </div>
          <div class="card-body p-3 p-sm-5 fw-bold">
            <%= form_for :session, url: login_path do |f| %>
              <div class="mb-2">
                <%= f.label :email, t("text.email") %>
                <%= f.text_field :email, class: "form-control" %>
              </div>
              <div class="mb-2">
                <%= f.label :password, t("text.password") %>
                <%= f.password_field :password, class: "form-control" %>
              </div>
              <div class="form-check mb-3">
                <%= f.label :remember_me do %>
                  <%= f.check_box :remember_me, class: "form-check-input" %>
                  <span><%= t("text.remember_me") %></span>
                <% end %>
              </div>
              <div class="d-grid">
                  <%= f.button t("text.login"), type:"submit", class: "btn btn-dark btn-login fw-bold text-uppercase" %>
              </div>
              <hr class="my-4">
              <div class="text-center"><%= t "text.no_account" %> <%= link_to t("text.register"), signup_path %></div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
